<% if signed_in? %>
<div class="modal hide fade" id="NewBoard">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Create a New Project</h3>
  </div>
  <div class="modal-body">
    <%= form_for current_user.collections.build do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, maxlength: 50, placeholder:"Give a name to your idea. Don\'t worry, it can change later.", class: "span6"%>
      <%= f.label :description %>
      <%= f.text_area :description, maxlength: 200, placeholder:"Tell us your idea with a brief description.", rows: 4 , class: "span6" %>
      <%= f.label :needs, 'Do you need help?' %>
      <%= f.text_area :needs, maxlength: 200,placeholder:"Is something stopping you? Do you need ideas, references or someone to collaborate with? Let us know what you need!", rows: 4, class: "span6" %>
      <%= f.label :category_id %>
      <%= f.select :category_id, options_from_collection_for_select(categories, "id", "name") %>     
  </div>
  <div class="modal-footer">
    <a  data-dismiss="modal" href="#" class="btn btn-small">Close</a>
      <%= f.submit "Create Project", class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>