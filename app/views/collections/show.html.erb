<% provide :title, @board.title %> 
<% if !signed_in? %>
	<div class="idea">
		<h3>Para unirte a este proyecto <%= link_to 'inicia sesión', '/signin' %> o <%= link_to 'regístrate', root_path %>.</h3>
	</div>
	<br>
<% end %>

<div class="row">
	<div class="span12">
		<h1><%= @board.title %></h1>
		<p>Por <%=link_to @board.user.name, @board.user %>
			<% if @board.collaborators %>
				<% @board.collaborators.each do |c| %>
					<%=", "%><%=link_to c.name, c %>
				<% end %>
			<% end %>
			<%= link_to @board.category.name, nav_path(category: @board.category.id), class: "label"%></p>

			<p>Estatus: <%= if @board.status then "Concluido" else "En curso" end %></p>

			<%= render 'invite' %><%if signed_in? && (owner? || current_user.admin) %>
			<%= link_to "Editar proyecto", edit_collection_path(@board), class: "btn btn-small" %>
		<%end%><%= render 'promote'%>
		<br><br>

		<ul id="WoI" class="nav nav-tabs">
			<li class="active"><a href="#work" data-toggle="tab">Proyecto</a></li>
			<li><a href="#inspiration" data-toggle="tab">Inspiración</a></li>
		</ul>
		<div id="WoIContent" class="tab-content">
			<div class="tab-pane fade in active" id="work">
<%# division to new %>
				<div class="row">
					<div class="span6">

						<h2>La idea</h2>
						<%if @board.cover != 0%>
							<%= wrap(default_OG_b(embedded_b(@board.items.find(@board.cover).content, 6))) %>
						<%else%>
							<%= image_tag(dummycover(@board.category_id))%>
						<%end%>
						<%= render 'share' %>
						<p><%= @board.description %></p>
						<h2>Progreso</h2>

						<% if collaborates? %><%=render 'shared/add_item', kind: 1 %><% end%>

						<%= render 'wcollections' %>

					</div>
<%#lado derecho%>
					<div class="span5 offset1">
						
						<div class="row">
							<div class='span4'>
								<h2>¿Colaboras?</h2>
							</div>
							<div class='span1'>
								<br>
								<%= render 'add_vacant'%>
							</div>
						</div>
						<% @board.vacants.each do |v|%>
							<%if !v.id.nil? %>
							<div class="row help">
								<div class='span3'>
									<h3><%=v.title%></h3>
									<p><%=v.description%></p>
								</div>
								<div class='span2 textc'>
									<%= render 'i_can_help', id: v.id %>
									<%= if owner? then link_to 'Descartar ', v, method: :delete end%>
								</div>
							</div>
							<br>
							<%end%>
						<%end%>
					</div>
				</div>
			</div>

			<div class="tab-pane fade" id="inspiration">
				<% if collaborates? %><%=render 'shared/add_item', kind: 0 %><% end%>
				<%= render 'icollections' %>

			</div>
		</div>
	</div>
</div>		
