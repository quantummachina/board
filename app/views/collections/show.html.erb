<% if !signed_in? %>
	<div class="idea">
		<h3>To join this project just <%= link_to 'login', '/signin' %> or <%= link_to 'sign up', root_path %>.</h3>
	</div>
	<br>
<% end %>
<div class="row-fluid">
	<div class="span12">
		<h1><%= @board.title %> <small><%= link_to @board.category.name, nav_path(category: @board.category.id)%></small></h1>
		<h3>By <%=link_to @board.user.name, @board.user %>
			<% if @board.collaborators %>
				<% @board.collaborators.each do |c| %>
					<%=", "%><%=link_to c.name, c %>
				<% end %>
			<% end %>
		</h3>
		<%= render 'promote'%>
		<%if signed_in? && (owner? || current_user.admin) %>
			<small><%= link_to "Edit project", edit_collection_path(@board) %></small></p>
		<%end%>
		</br>
		<h2>The Idea</h2>
		<p class="lead"><%= @board.description %></p>


		<div class="row help">
			<div class='span6'>
				<h1>Help!</h1>
				<p class="lead"><%=@board.needs%></p>
			</div>
			<div class='span4 offset1'><%= render 'i_can_help'%></div>
		</div>
		<br>

		<div class="row">
			<div class='span2'><%= render 'invite' %></div>
			<%= render 'share' %>
		</div>
		<hr>
		<%= if collaborates? then render 'shared/add_item' end%>
		
	</div>
</div>
<div id='user_collections'>
	<%= render 'collections' %>
</div>

<% if @board.items.count==0 and @board.collaborations.empty? and owner? %>
	<script type="text/javascript">
	    $(window).load(function(){
	        $('#Invite').modal('show');
	    });
	</script>
<!--a class="btn" data-toggle="modal" href="#Invite" Launch Modal/a-->

<div class="modal active" id="Invite">

	<div class="modal-header">
	  <a class="close" data-dismiss='modal' href="#">Ã—</a>
	  <br>
	</div>

	<div class="modal-body">
	  <p><h2> Invite a friend to help you </h2></p>
	  <%= form_tag '/suscribe' do %>
		<%= hidden_field_tag 'board_id', @board.id %>
		<%= text_field_tag 'email1', nil, placeholder:'email address', class: 'offset1'%>
		<%= text_field_tag 'email2', nil, placeholder:'email address', class: 'offset1'%>
		<%= text_field_tag 'email3', nil, placeholder:'email address', class: 'offset1'%>
	</div>

	<div class="modal-footer">
	  	<a  data-dismiss='modal' href="#" class="btn">Close</a>
	  	<%= submit_tag 'Send invitations', class: "btn btn-primary" %>
	  <% end %>

	</div>
</div>
<%end%>