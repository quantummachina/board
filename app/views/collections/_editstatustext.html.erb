<%if signed_in? && owner? %>

	<a data-toggle="modal" href="#edstatext" >editar estatus</a>
	
	<div class="modal hide fade" id="edstatext">
	  <div class="modal-header">
	    <a class="close" data-dismiss="modal">×</a>
	    <h3>Estatus</h3>
	  </div>
	  <div class="modal-body">
	  	<div class="row">
	  		<div class= "span4 offset1 tcenter">
	  	
		<%= form_tag '/statusupdate' do %>
			<%= hidden_field_tag 'board_id', @board.id %>
			<%= text_area_tag 'statustext', nil, maxlength: 140, placeholder:'Cuéntanos en qué va su proyecto, cual es la próxima actividad o reunión. (140 caracteres)', rows: 4, class: 'span4'%>	
			<br>
			<br>
			<%if @board.status !=5 %>
			Finalizar proyecto como exitoso 
			<%= link_to(
				url_for(controller: 'collections', action: 'markfinished', id: @board.id),
				confirm: "¿Estás seguro? Si marcas tu proyecto como terminado no podrás cambiar su estatus de nuevo.",
				class: 'btn btn-mini') do %>
				<i class='icon-ok'></i>
			<%end%>
			<%end%>

			</div>
		</div>
	  </div>		
	  <div class="modal-footer">
	  	<%= submit_tag 'Actualizar', class: "btn btn-primary pull-right" %><% end %>
		    <a  data-dismiss='modal' href="#" class="btn">Cancelar</a>
		  	


	  </div>
	</div>

	

<%end%>