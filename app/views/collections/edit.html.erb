<% provide :title, "Edit Board" %> 
<div class="row">
  <div class = "span6 offset3">
	<h1>Edit Board</h1>
	<h2><%= @collection.title %></h2>
	<hr>
  	<%= form_for(@collection) do |f| %>
		<%= f.label :title %>
	 	<%= f.text_field :title, maxlength: 50 %>
	 	<%= f.label :description %>
	 	<%= f.text_area :description, rows: 10, maxlength: 140 %>
	 	<%= f.label :category_id, "Category:" %>
    	<%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name", selected: @collection.category.id) %>
	 	<%= f.submit "Update Board", class: "btn btn-small btn-primary" %>
	<% end %>
	<%= link_to "Delete board", @collection, method: :delete, title: "delete board", confirm: "Are you shure? you will not be able to undo this action." %>
  </div>
</div>