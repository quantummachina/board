<% provide :title, "Edit Board" %> 
<div class="row">
  <div class = "span6 offset3">
	<h1>Edit Board</h1>
	<h2><%= @collection.title %></h2>
	<hr>
  	<%= form_for(@collection) do |f| %>
		<%= f.label :title %>
	 	<%= f.text_field :title, maxlength: 50, class: "span6"  %>
	 	<%= f.label :description %>
	 	<%= f.text_area :description, maxlength: 200, rows: 4, class: "span6"  %>
	 	<%= f.label :needs, 'Do you need help?' %>
      	<%= f.text_area :needs, maxlength: 200, placeholder:" WhatÂ´s stopping you? Do you need an idea, someone to help you or just a little push? Come and tell us!", rows: 4, class: "span6" %>
	 	<%= f.label :category_id, "Category:" %>
    	<%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name", selected: @collection.category.id) %>
	 	<%= f.submit "Update Board", class: "btn btn-small btn-primary" %>
	<% end %>
	<%= link_to "Delete board", @collection, method: :delete, title: "delete board", confirm: "Are you sure? You will not be able to undo this action." %>
  </div>
</div>