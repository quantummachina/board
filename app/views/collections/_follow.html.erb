<% cfollowed = current_user.cfollowings.find_by_cfollowed_id(@board.id) %>
<% if cfollowed.nil? %>
	<%= link_to 'Seguir', {controller: 'cfollowings', action: 'create', collection: @board.id}, method: :post,  class: 'btn btn-large btn-primary' %>
<%else%>
	<%= link_to 'Dejar de Seguir', cfollowed, method: :delete, class: 'btn btn-large btn-info' %>
<%end%>