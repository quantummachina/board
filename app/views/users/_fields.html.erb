  <%if @user.id.nil? then dis = false else dis = true end%>
  <%= f.label :email, 'Correo Electrónico' %>
  <%= f.text_field :email, disabled: dis %>

  <%= f.label :password, 'Nueva Contraseña' %>
  <%= f.password_field :password, disabled: dis %>

  <%= f.label :password_confirmation, "Confirmar Contraseña" %>
  <%= f.password_field :password_confirmation, disabled: dis %>

  <hr>
  <%= f.label :city, 'Ciudad' %>
  <%= f.text_field :city %>

  <%= f.label :category_id, 'Áreas Creativas' %>
