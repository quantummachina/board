<!-- requires board -->
<%= link_to board, class: "board-thumb-big" do %>
<div class= 'row'>
	<div class='span5'>
		<% if board.cover != 0 %>
			<%= cover(board.items.find(board.cover))%>
		<%else%>
			<%= image_tag(dummycover(board.category_id))%>
		<% end %>
	</div>
	<div class='span6'>
		<%if board.category #label%>
			<div class= "<%='b'+board.category_id.to_s%>">
				<p><small><%= board.category.name %></small></p>
			</div>
		<%end%>
		<div class='thmbcontent'>

			<h3><%= board.title %></h3>
			<h4><%= if board.city_id == 0 then 'En LÃ­nea' else board.city.name end %></h4>
			<p><%= board.idea %></p>

			<%if board.vacants %>
			<h4>
				<%board.vacants.each do |v|%>
					<%#v.title+ "      "%>
				<%end%>
			</h4>
			<%end%>
		</div>
	</div>
</div>
<% end %>