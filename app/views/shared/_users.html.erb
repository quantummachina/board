<!-- requires boards -->
<!--div class="row-fluid"-->
<% if !users.empty? %>
	<% indexes = arr_4_cols(users.count,3) %>
	<div class="row">
		<% indexes.each do |col| %>
			<div class="<%="span#{3}" %>">
				
					<% col.each do |i| %>
						<% user = users[i] %>
						<%= render 'shared/user_card', user: user%>
				  		
					<% end %>
				
			</div>
		<% end %>
	</div>
<% end %>

	