<!--div class="row-fluid"-->
<% if !users.empty? %>
	<% indexes = arr_4_cols(users.count,3) %>
	<div class="row">
		<% indexes.each do |col| %>
			<div class="<%="span#{3}" %>">
				
					<% col.each do |i| %>
						<% user = users[i] %>

				  	    <%= link_to user, class: "user-card" do %>
				  	    <div class='span1'>
							<% if user.uid != 0 %>
								<%=image_tag 'https://graph.facebook.com/' + user.uid.to_s + '/picture' %>
							<%else%>
								<%= image_tag user.photo.url(:thumb), size:'50x50' if user.photo.url != '/photos/original/missing.png'%>
							<%end%>
				  	    </div>
				  	    <div class 'span2'>
							<p><%= user.name %></p>
							<p><small><%= if user.city_id !=0 then user.city.name end %></small></p>
						</div>
							<p><small><%= user.about[0..82
								] %></small></p>
							
							√Åreas:<%= render 'categories_cards', user: user %>
							
						<% end %>
				  		
					<% end %>
				
			</div>
		<% end %>
	</div>
<% end %>

	