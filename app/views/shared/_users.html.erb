<!-- requires boards -->
<!--div class="row-fluid"-->
<% if !users.empty? %>
	<% indexes = arr_4_cols(users.count,3) %>
	<div class="row">
		<% indexes.each do |col| %>
			<div class="<%="span#{3}" %>">
				<div class="row-fluid">
					<% col.each do |i| %>
						<% user = users[i] %>

				  	    <%= link_to user, class: "user-card" do %>
							<p><%= user.name %></p>
							<p><small><%= user.city %></small></p>
							<p><small><%= user.about[0..90
								] %></small></p>
							
							Fields: <span class="label label-info"><%= user.category.name %></span>, <span class="label label-info"><%= user.subcategory.name %></span>
							
						<% end %>
				  		
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
<% end %>

	