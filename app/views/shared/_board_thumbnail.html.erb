<!-- requires board, size -->
<%= link_to board, class: "board-thumb" do %>
	<p><%= board.title %></p>
	
	<p><small><%= board.description %></small></p>
	<% if board.items.any? %>
		<% if isImage?(og_image(board.items.first.content, size.to_i)) %>
			<%=og_image(board.items.first.content, size.to_i)%>
		<% else %>
			<%= wrap(og_image(board.items.first.content, size.to_i)) %>
		<% end %>
	<% end %>

<% end %>