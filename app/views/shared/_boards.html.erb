<!-- requires boards, first -->
<!--div class="row-fluid"-->

<% if !boards.empty? %>
<% if first %>
	<%boards.each do |board|%>
		<%= render 'shared/board_thumbnail_big', board: board, size: 3 %>
	<%end%>
<%else%>
	<% indexes = arr_4_cols(boards.count,3) %>
	<div class="row">
		<% indexes.each do |col| %>
			<div class="<%="span#{3}" %>">
				<div class="row-fluid">
					<% col.each do |i| %>

						<% board = boards[i] %>
						
				  	    	<%= (render 'shared/board_thumbnail',  board: board, size: 3) if !board.quarantine %>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
<%end%>
<% end %>

	