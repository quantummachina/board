<%if @sprojects.count >= 1%>
<div class=''>
<div class='container'>
<div class='span12'>
	<div class="row">
	  <div class="span7 offset3 textc">
	  	<br>
		<h1><%=@s2.tls.find_by_i(1).t%></h1>
		<br>
	  </div>

	  	<div class = 'row'>

	      	<% @sprojects.each do |s|%>
	          <div class="span4">

	            <%= link_to s.collection, class: "sbthumb" do %>
	            	<% if s.collection.cover != 0 %>
						<%= cover(s.collection.items.find(s.collection.cover))%>
					<%else%>
						<%= image_tag(dummycover(s.collection.category_id))%>
					<% end %>
					<div class='thmbcontent'>
						<h3><%= s.collection.title %></h3>
						<p><%= s.collection.idea %></p>
					</div>
				<% end %>
	            
	          </div>
	        <%end%>

    	</div>

		<br>
		<br>
	  </div>
	</div>
</div>
</div>
</div>
<%end%>